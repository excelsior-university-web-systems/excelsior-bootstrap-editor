{
    "apiVersion": 2,
    "name": "excelsior-bootstrap-editor/accordion-item",
    "title": "Accordion Item",
    "description": "Create an accordion item.",
    "category": "excelsior-bootstrap-editor-blocks",
    "parent": ["excelsior-bootstrap-editor/accordion"],
    "supports": {
        "html": false
    },
    "attributes": {
        "title": {
            "type": "string"
        },
        "uniqueId": {
            "type": "string"
        },
        "open": {
            "type": "boolean",
            "default": false
        },
        "openForEditing": {
            "type": "boolean",
            "default": true
        },
        "HeadingLevel": {
            "type": "string",
            "default": "h2"
        },
        "headingSize": {
            "type": "string",
            "default": "h4"
        }
    },
    "usesContext": [
        "excelsior-bootstrap-editor/accordionHeadingLevel",
        "excelsior-bootstrap-editor/accordionHeadingSize"
    ]
}